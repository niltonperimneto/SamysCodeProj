@model List<ContatoModel>
@{
    ViewData["Title"] = "i i dont i nwanaw yeah thats it you can thank my teacher for that awesome banger of a title";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justfy-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Criar" >wanna put a new silly?</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-info" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">(,,•ω•,,)♡</button>
        </div>
    }
    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">(─‿‿─)♡</button>
        </div>
    }
    <br />
    <h1>list of sillies :333!</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">OWO</th>
                <th scope="col">uwu</th>
                <th scope="col">:3:3</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any()) {
                foreach (var contato in Model){
                 <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.Name</td>
                <td>@contato.Email</td>
                <td>@contato.Celular</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">do u wanna edit this</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">do u wanna delete this</a>
                    </div>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
